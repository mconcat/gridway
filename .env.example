# Helium CometBFT Integration Environment Variables

# Chain Configuration
CHAIN_ID=helium-testnet

# Network Ports
COMETBFT_P2P_PORT=26656
COMETBFT_RPC_PORT=26657
HELIUM_ABCI_PORT=26658
HELIUM_GRPC_PORT=9090
HELIUM_REST_PORT=1317

# Data Directories
TESTNET_DIR=./testnet
COMETBFT_HOME=${TESTNET_DIR}/node0
HELIUM_HOME=${TESTNET_DIR}/helium

# Logging
RUST_LOG=info
COMETBFT_LOG_LEVEL=info

# Node Configuration
MONIKER=helium-node-0
VALIDATOR_KEY_ALGO=secp256k1

# Performance
MAX_CONNECTIONS=10
FLUSH_INTERVAL=100
PERSIST_INTERVAL=1
RETAIN_BLOCKS=0